# Unity YAML files
*.meta   -text -merge=unityyamlmerge
*.unity  -text -merge=unityyamlmerge
*.asset  -text -merge=unityyamlmerge
*.prefab -text -merge=unityyamlmerge

# Track large binary files with Git LFS
*.psd    filter=lfs diff=lfs merge=lfs -text
*.hdr    filter=lfs diff=lfs merge=lfs -text
*.tga    filter=lfs diff=lfs merge=lfs -text
*.png    filter=lfs diff=lfs merge=lfs -text
*.jpg    filter=lfs diff=lfs merge=lfs -text
*.exr    filter=lfs diff=lfs merge=lfs -text
*.fbx    filter=lfs diff=lfs merge=lfs -text
*.obj    filter=lfs diff=lfs merge=lfs -text
*.mp4    filter=lfs diff=lfs merge=lfs -text
*.wav    filter=lfs diff=lfs merge=lfs -text
*.unitypackage filter=lfs diff=lfs merge=lfs -text

# Prevent line-ending normalization for binary files
*.dll    -text
*.exe    -text
*.zip    -text
*.rar    -text
*.7z     -text
*.gz     -text
*.bin    -text
*.iso    -text
*.unitypackage -text

# Documentation and non-binary files (optional custom rules)
*.txt     text eol=lf
*.md      text eol=lf
*.json    text eol=lf
*.xml     text eol=lf
*.yaml    text eol=lf

# Ignore system-specific and editor-specific files
.DS_Store -text
Thumbs.db -text
